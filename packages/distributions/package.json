{
  "name": "@envisim/distributions",
  "type": "module",
  "main": "./dist/es/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/es/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/js/index.js"
    }
  },
  "types": "./dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm-run-all 'build:*'",
    "build:es": "tsc",
    "build:js": "tsc --outDir dist/js --module commonjs --declaration false && echo '{\"type\":\"commonjs\"}' > dist/js/package.json",
    "docs": "typedoc",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@envisim/matrix": "workspace:*",
    "@envisim/random": "workspace:*"
  }
}
