{
  "$schema": "https://typedoc.org/schema.json",

  "plugin": ["typedoc-plugin-markdown"],

  "excludeNotDocumented": false,
  "excludeInternal": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "disableSources": true,
  "readme": "none",

  "hideGenerator": true,

  "commentStyle": "jsdoc",

  "externalSymbolLinkMappings": {
    "@envisim/distributions": {
      "*": "https://github.com/envisim/core/tree/main/packages/distributions/docs"
    },
    "@envisim/estimate": {
      "*": "https://github.com/envisim/core/tree/main/packages/estimate/docs"
    },
    "@envisim/geojson-utils": {
      "*": "https://github.com/envisim/core/tree/main/packages/geojson-utils/docs"
    },
    "@envisim/geosampling": {
      "*": "https://github.com/envisim/core/tree/main/packages/geosampling/docs"
    },
    "@envisim/matrix": {
      "*": "https://github.com/envisim/core/tree/main/packages/matrix/docs"
    },
    "@envisim/random": {
      "*": "https://github.com/envisim/core/tree/main/packages/random/docs"
    },
    "@envisim/sampling": {
      "*": "https://github.com/envisim/core/tree/main/packages/sampling/docs"
    },
    "@envisim/utils": {
      "*": "https://github.com/envisim/core/tree/main/packages/utils/docs"
    }
  }
}
